{
    "openapi": "3.0.0",
    "info" : {
        "version" : "1.0.0",
        "description" : "APIs for Ecommerce website",
        "title" : "E-Commerce APIs"
    },
    "servers" : [
        {
            "url" : "http://localhost:3000"
        }
    ],
    "components" : {
        "securitySchemes" : {
            "JWT" : {
                "in" : "header",
                "name" : "Authorization",
                "type" : "apiKey"
            }
        }
    },
    "paths" : {
        "/api/users/signIn" : {
            "post" : {
                "tags": ["Users"],
                "summary" : "Login",
                "description" : "User Login to get the JWT token",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type" : "object",
                                "properties" : {
                                    "email" : {
                                        "type" : "string"
                                    },
                                    "password" : {
                                        "type" : "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "200" : {
                        "description" : "OK"
                    },
                    "400" : {
                        "description" : "Invalid Credentials"
                    }
                }
            }
        },
        "/api/products/all" : {
            "get" : {
                "tags" : ["Products"],
                "summary" : "All Products",
                "description" : "User will receive All the products",
                "security" : [
                    {
                        "JWT" : {}
                    }
                ],
                "responses" : {
                    "200" : {
                        "description" : "OK"
                    },
                    "401" : {
                        "description" : "Unauthorized"
                    }
                }
            }
        }
    }
    
}